<Window x:Class="MainServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gomoku Game Server Manager" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">
    
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>
        
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="32"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15" Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Server Stats -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="#2C3E50" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Margin="0,0,10,0">
                        <Ellipse.Fill>
                            <SolidColorBrush x:Name="StatusIndicator" Color="#2ECC71"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="Server: " Foreground="#BDC3C7" FontSize="16"/>
                    <TextBlock x:Name="StatusText" Text="Running" Foreground="#2ECC71" FontSize="16" FontWeight="Bold"/>
                    
                    <Rectangle Width="1" Height="20" Fill="#7F8C8D" Margin="15,0"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="ðŸ‘¥ " FontSize="18"/>
                        <TextBlock Text="Clients: " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock x:Name="ClientsCountText" Text="0" Foreground="#3498DB" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                        <TextBlock Text="âš™ï¸ " FontSize="18"/>
                        <TextBlock Text="Workers: " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock x:Name="WorkersCountText" Text="0" Foreground="#E74C3C" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ® " FontSize="18"/>
                        <TextBlock Text="Active Games: " Foreground="#BDC3C7" FontSize="14"/>
                        <TextBlock x:Name="ActiveGamesText" Text="0" Foreground="#F39C12" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
                
                <Button x:Name="StartStopServerButton" Grid.Column="1" Content="â¹ Stop Server" 
                        Width="130" Height="38" Background="#E74C3C" Foreground="White"
                        FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"
                        Click="StartStopServerButton_Click" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" Padding="10,5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Logs -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸ“‹ Server Logs" Style="{StaticResource SectionHeader}"/>
                        <Button x:Name="ClearLogsButton" Content="Clear" Width="70" Height="24" 
                                Margin="10,0,0,0" Click="ClearLogsButton_Click" FontSize="11"/>
                    </StackPanel>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                        <ListBox x:Name="LogListBox" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </DockPanel>
            </Border>
            
            <!-- Middle Panel: Workers and Clients -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0">
                <DockPanel>
                    <!-- Workers Section -->
                    <TextBlock Text="âš™ï¸ Workers" Style="{StaticResource SectionHeader}" DockPanel.Dock="Top"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" DockPanel.Dock="Top">
                        <DataGrid x:Name="WorkersDataGrid" 
                                  Height="180"
                                  Style="{StaticResource DataGridStyle}"
                                  SelectionChanged="WorkersDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding WorkerId}" Width="60"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70"/>
                                <DataGridTextColumn Header="Task" Binding="{Binding CurrentTask}" Width="*"/>
                                <DataGridTextColumn Header="Done" Binding="{Binding TasksCompleted}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    
                    <Button x:Name="DisconnectWorkerButton" Content="Disconnect Worker" Height="28" 
                            Margin="0,0,0,15" Click="DisconnectWorkerButton_Click" IsEnabled="False" DockPanel.Dock="Top"/>
                    
                    <!-- Clients Section -->
                    <TextBlock Text="ðŸ‘¥ Connected Clients" Style="{StaticResource SectionHeader}" DockPanel.Dock="Top"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15" DockPanel.Dock="Top">
                        <DataGrid x:Name="ClientsDataGrid" 
                                  Height="180"
                                  Style="{StaticResource DataGridStyle}"
                                  SelectionChanged="ClientsDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Client ID" Binding="{Binding ClientId}" Width="90"/>
                                <DataGridTextColumn Header="Player Name" Binding="{Binding PlayerName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                    
                    <Button x:Name="DisconnectClientButton" Content="Disconnect Client" Height="28" 
                            Click="DisconnectClientButton_Click" IsEnabled="False" DockPanel.Dock="Top"/>
                </DockPanel>
            </Border>
            
            <!-- Right Panel: Active Games -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                <DockPanel>
                    <TextBlock Text="ðŸŽ® Active Games" Style="{StaticResource SectionHeader}" DockPanel.Dock="Top"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                        <DataGrid x:Name="RoomsDataGrid" 
                                  Style="{StaticResource DataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Room ID" Binding="{Binding RoomId}" Width="80"/>
                                <DataGridTextColumn Header="Player 1" Binding="{Binding Player1Name}" Width="*"/>
                                <DataGridTextColumn Header="Player 2" Binding="{Binding Player2Name}" Width="*"/>
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
